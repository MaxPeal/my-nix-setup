#! /bin/bash
# A helper for creating a *.tar.bz2 archive with defaults for included metadata 
export COPY_EXTENDED_ATTRIBUTES_DISABLE=true
export COPYFILE_DISABLE=true
tar -c --exclude='._*' --exclude='.svn' --exclude='.git' --exclude='.hg' --exclude='.DS_Store' --exclude='*.bak' --exclude='*~' -vjf "$@"
